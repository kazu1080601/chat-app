<div class="mc_header">
  <div class="chat_title">
    hogehoge
  </div>
  <div class="chat_delete_button">
    <a href="#">チャットを終了する</a>
  </div>
</div>

<div class="mc_main">
  <div class="message">
    <div class="message_header">
      <div class="message_name">
        Tom
      </div>
      <div class="message_date">
        2020/3/31(Wed) 12:43:30
      </div>
    </div>
    <div class="message_main">
      おはよう
    </div>
  </div>
</div>

<div class="mc_footer">
  <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
    <div class="form_input">
      <%= f.text_field :content, class: 'message_form', placeholder: 'type a message' %>
      <label class="img_button">
        <span>画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit '送信', class: 'send_button' %>
  <% end %>
</div>
